@model Event_EaseApp.Models.Venue

@{
    ViewData["Title"] = "Venue Details";
}

<h1>Venue Details</h1>

<div>
    <h4>Venue</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Venue Name
        </dt>
        <dd class="col-sm-10">
            @Model.VenueName
        </dd>
        <dt class="col-sm-2">
            Location
        </dt>
        <dd class="col-sm-10">
            @Model.Location
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.ImageUrl" alt="Venue Image" width="200" />
        </dd>
        <dt class="col-sm-2">
            Capacity
        </dt>
        <dd class="col-sm-10">
            @Model.Capacity
        </dd>

        <!-- Step 7: Replace ImageUrl text display with real image -->
        <dt class="col-sm-2">
            Venue Image
		</dt>

        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="Venue Image" width="100" height="100" style="object-fit:cover; border-radius:12px" />
            }
            else
            {
                <span>No Image</span>
            }
        </dd>   
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.VenueID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
